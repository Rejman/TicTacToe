<StackPane fx:id="mainStackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.TreeViewPanelController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
            <BorderPane fx:id="borderPane">
               <center>
                  <AnchorPane fx:id="parentPanel" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Parent" />
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </BorderPane.margin>
                  </AnchorPane>
               </center>
               <right>
                  <GridPane BorderPane.alignment="CENTER">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="118.0" minWidth="83.0" prefWidth="115.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="121.0" minWidth="10.0" prefWidth="89.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                        <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Rating" />
                        <Label text="Number of children" GridPane.rowIndex="1" />
                        <Label fx:id="ratingLabel" text="Label" GridPane.columnIndex="1" />
                        <Label fx:id="numberOfChildrenLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
               </right>
               <bottom>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" text="ðŸ¡    previous state" textAlignment="CENTER">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                        <Label text="Level:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="levelLabel" text="Label">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </HBox>
               </bottom>
            </BorderPane>
            <VBox alignment="CENTER">
               <children>
                  <ScrollPane hbarPolicy="NEVER">
                     <content>
                        <FlowPane fx:id="childrenPanel" />
                     </content>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
